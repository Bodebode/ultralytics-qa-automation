{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["@playwright/test", "node"]
  },
  "include": ["pages/**/*.ts", "tests/**/*.ts", "config/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}